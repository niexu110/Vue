/* pages/coupon/coupon.wxss */
.coupon_box{
    width:90%;
    height:auto;
    margin:0 auto;
}
.headerMiddle{
    width:100%;
    height:90rpx;
    line-height: 90rpx;
    display: flex;
    flex-flow:row nowrap;
    justify-content:center;
    align-content: center;
    text-align: center;
}
.headerMiddle view{
    flex:1;
    font-size:30rpx;
    color:#121212;
}
.line{
    width:80rpx;
    height:2px;
    background-color: #4b85cc;
    display: block;
    margin:-10px auto 0;
}
.headerMiddle .notName,.headerMiddle .alreadName,.headerMiddle .expiredName{color:#4D85CC;}
.main{
    width:100%;
    height:auto;
}
.main_content{
    width:100%;
    margin-top:40rpx;
    height:200rpx;
    text-align: center;
}
.main_content image{
    width:630rpx;
    height:200rpx;
}
.notuse{
    width:90%;
    height:auto;
    position: absolute;
    top:40rpx;
}
.coupon_content {
    width:630rpx;
    height:200rpx;
    position: absolute;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: -215rpx;
    margin-left: 20rpx;
}
.coupon_left {
    width:215rpx;
    height:200rpx;
    line-height: 65rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.coupon_right {
    width:415rpx;
    height:200rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    line-height: 46rpx;
    margin-left: 40rpx;
}
.coupon_price {
    color: #ffffff;
    font-size: 68rpx;
}
.coupon_condition {
    color: #ffffff;
    font-size: 22rpx;    
}
.coupon_name {
    font-size: 30rpx;   
    float: left;    
}
.coupon_time, .coupon_word {
    font-size: 20rpx;
    color: #666666;
}
.null{
    width: 685rpx;
    margin-top: 200rpx;
}