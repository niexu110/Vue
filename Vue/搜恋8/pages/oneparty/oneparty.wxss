/* pages/oneparty/oneparty.wxss */
page {
    width: 100%;
    height: 100%;
}
/*导航部分*/
.oneparty_nav{
    width: 100%;
    height:88rpx;
    position: fixed;
    top: 0;
    z-index: 2;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    color:#121212;
    background: #f9f9f9;
    font-size: 28rpx;
}
.navclass1{
    color:#4b85cc;
    border-bottom: solid 1px #4b85cc
}
.navclass2{
    color:#121212;
}
/*内容*/
.contentBox{
    background: #f1f1f1;
    display: flex;
    flex-flow: wrap;
    margin-top: 88rpx;
    justify-content: space-between;
    padding: 0 40rpx;
}
/*瀑布流
    column-count: 1;
    column-gap: 10rpx;*/
.content{
    width: 325rpx;
    float:left;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    background: #fff;
}
.titleimg{
    width: 325rpx;
    height:200rpx;
}
.titletext{
    padding-left: 10rpx;
    min-height:54rpx;
    line-height: 54rpx;
    font-size: 24rpx;
    color:#333;
    font-weight: 600;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.addressbox{
    height: 40rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.timeimg{
    margin: 0 10rpx;
    width: 20rpx;
    height: 20rpx;
}
.timetext,.sitetext{
    display: block;
    font-size: 22rpx;
    color:#666;
    width:270rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.siteimg{
    width: 20rpx;
    height: 25rpx;
    margin: 0 10rpx;
}
.moneyClass{
    margin-left: 10rpx;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 22rpx;
    color:#666;
    padding-top: 10rpx;
    border-top: solid 1px #e6e6e6;
}
.moneytext{
    color:#feb3c5;
}
