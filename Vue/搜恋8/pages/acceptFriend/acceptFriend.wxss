/* pages/addFriend/addFriend.wxss */
.container{
    background-color: #fff;
}

.choiceSex{
    width:90%;
    margin:0 auto;
}
.banner{
    width:100%;
    height:auto;
}
.banner_box{
    width:100%;
    height:160rpx;
    border-top:1rpx solid #E6E6E6;
}
.banner_box_left{
    float:left;
    width:80%;
    height:160rpx;
}
.icon{
    width:103rpx;
    height:103rpx;
    float:left;
    border-radius:5rpx;
    margin-top:30rpx;
    margin-right:20rpx;
}
.banner_box_container{
    display:inline-block;
    margin-top:30rpx;
    width:70%;
}
.nick_name{
    display:inline-block;
    font-size:34rpx;
    font-weight:bold;
}
.age{
    margin-top:-5rpx;
    margin-left:20rpx;
    display:inline-block;
    font-size:22rpx;
    color:#fff;
    text-align:center; 
    padding:0 10rpx;
    border-radius:5rpx; 
    background-color:#FEB3C5;
}
.girls{
 width:20rpx;
 height:15rpx;
}
.girl{
    width:25rpx;
    height:20rpx;
}
.glamour{
    margin-left:20rpx;
    display:inline-block;
    font-size:22rpx;
    color:#7A7A7A;
}
.range{
    margin-top:10rpx;
    color:#ADADAD;
    font-size:26rpx;
    width:100%;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;

}
.btn{
    margin-top:50rpx;
    width:100rpx;
    height:50rpx;
    line-height:50rpx;
    font-size:26rpx;
    text-align: center;
    background:#5793DD;
    color:#fff;
    border-radius:5rpx; 
}
.btns{
    margin-top:50rpx;
    width:100rpx;
    height:50rpx;
    line-height:50rpx;
    font-size:26rpx;
    text-align: center;
    border:1rpx solid #5793DD;
    color:#5793DD;
    border-radius:5rpx; 
}
.ages{
    margin-top:-5rpx;
    margin-left:20rpx;
    display:inline-block;
    font-size:22rpx;
    color:#fff;
    text-align:center; 
    padding:0 10rpx;
    border-radius:5rpx; 
    background:#5793DD;
}