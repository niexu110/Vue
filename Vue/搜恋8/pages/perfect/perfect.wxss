/* pages/perfect/perfect.wxss */
page{min-height: 100%;background-color: #fff;}
.container{
    background-color: #fff;
    height: 100%;
}
.dataForm{
    width:100%;
    display:block;
}
/*头像上传*/
.headPortrait{
    width:100%;
    /*position: relative;*/
}
.headPortrait image{
    display: block;
    width:100%;
    height:172rpx;
}
.upload{
    width:120rpx;
    height:120rpx;
    margin:-60rpx auto 0;
}
.upImg{
    font-size:28rpx;
    font-weight:bold;
    padding-top:20rpx;
}
.upload image{
    display: block;
    width:120rpx;
    height:120rpx;
    border-radius:50%;
}
/*信息列表*/
.messageList{
    width:670rpx;
    margin:90rpx auto 0;
}
.list{
    width:100%;
    height:94rpx;
    display: flex;
    flex-flow:row nowrap;
    justify-content: space-between;
    padding-top:50rpx;
    border-bottom:1px solid #e6e6e6;
    box-sizing:border-box;
}
.list text{
    width:120rpx;
    margin:0 90rpx 0 20rpx;
    font-size: 30rpx;
    color:#999999;
}
.list input,.list picker,.list picker-view{
    flex:1;
    font-size: 30rpx;
    color:#111111;
    align-self: center;
    height:100%;
}
.list picker text{padding:0;margin:0;color:#111111;}
.list picker-view view{
    width:100%;
    height:100%;
    text-align: left;
    color:#111111;
}
.list .textColor{color:#cccccc;font-size:30rpx;}
.list .province{
    width:10%;
}
