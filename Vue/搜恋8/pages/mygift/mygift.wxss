/* pages/mygift/mygift.wxss */
.mygift_container {
    background-color: #ffffff;
}
.mygift_header {
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items: center;
    border-top:1px solid #eee;
    border-bottom:1px solid #eee;
    background-color: #ffffff;
    font-size:30rpx;
    color:#111111;
}
.line {
    width:80%;
    height:2px;
    background-color: #4b85cc;
    display: block;
    margin:3px auto 0;
}
.mygift_text {
    width: 100%;
    background-color: #ffffff;
}
.mygift_getgift {
    width: 100%;
}
.mygift_menu {
    width: 100%; 
    height: 70rpx;
    background-color: #eeeeee;
}
.mygift_image{
    float: left;
    margin-left: 40rpx;
    margin-top: 20rpx;
    width: 35rpx;
    height: 35rpx;
}
.mygift_today {
    float: left;
    font-size: 26rpx;
    margin-left: 20rpx;
    line-height: 70rpx;
}
.mygift_word {
    float: right;
    margin-right: 40rpx;
    color: #5793dd;
    font-size: 30rpx;
    line-height: 70rpx;    
}
.mygift_give_list {
    width: 100%;
    height: 120rpx;
}
.mygift_all {
    padding: 0 40rpx;
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    flex-direction: row;
}
.mygift_head_sculpture{
    margin-top: 20rpx;
}
.mygift_head_sculpture image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.mygift_give_information {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.mygift_up {
    width: 250rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; 
    margin-left: 15rpx;
    line-height: 40rpx;
}
.mygift_down {
    line-height: 40rpx;   
    width:150rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    
}
.mygift_half {
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    text-align: center;
    width: 150rpx;
    line-height: 38rpx;
}
.mygift_give_name {
    font-size:28rpx;  
    font-weight: bold;  
}
.mygift_give_myname {
    font-size:24rpx;    
}
.mygift_give_giftnum {
    font-size: 22rpx;
}
.mygift_give_Charm {
    font-size: 22rpx;
    color: #83ade3;
}
.mygift_give_date {
    font-size: 22rpx;
}
.mygift_give_sum {
    float: right;
    font-size: 30rpx;
    color: #99bbe7;
    font-weight: bold;
}
.mygift_myoffer {
    background-color: #f9f9f9;
}
.mygift_center {
    width: 100%; 
    height: 70rpx;
    background-color: #eeeeee;
    text-align: center;
    line-height: 70rpx;
}
.mygift_center_word {
    color: #5793dd;
    font-size: 30rpx;
}
.mygift_myoffer_packge {
    width: 95%;
    height: 120rpx;
    float: right;
    line-height: 120rpx;   
    border-bottom: 1px solid #e6e6e6; 
}
.mygift_myoffer_number {
    float: left;
    font-size: 44rpx;  
}
.mygift_myoffer_sculpture {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.mygift_myoffer_name {
    float: left;
    font-size: 40rpx;
    margin-left: 20rpx;

}
.mygift_myoffer_photo {
    float: right;
    margin-right: 20rpx;
    margin-top: 47rpx;
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
}
.mygift_myoffer_sum {
    float: right;
    margin-right: 40rpx;
    font-size: 32rpx;    
}