/* pages/team/team.wxss */
/*选择栏样式*/
.team_container {
    width: 100%;
    height: 100%;
}
.team_changePage {
    width: 100%;
    height: 90rpx;
    position: fixed;
    top:0;
    z-index: 2;
    background-color: #ffffff;
    display: flex;
    flex:row nowrap;
    justify-content:space-around;
    border-bottom: 1px solid #e6e6e6;
    border-top: 1px solid #e6e6e6;
}
.team_package {
    width:100%;
    display: flex;
    flex-flow:row nowrap;
    justify-content:center;
    align-content: center;
    text-align: center;
    margin-top: 30rpx;

}
.team_package view {
    flex:1;
    font-size:30rpx;
    color:#121212;  
}
.line {
    width:47%;
    height:2px;
    background-color: #4b85cc;
    display: block;
    margin:3px auto 0;    
}
/*内容样式*/
.team_body {
    width: 100%;
    margin-top: 100rpx;
}
.team_new_content {
    width: 90%;
    height: 530rpx;
    margin: auto;
}
.team_new_list {
    width: 100%;
}
.team_new_company {
    width: 100%;
    height: 100rpx;
}
.team_new_company image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-top: 13rpx; 
}
.team_new_contentName {
    font-size: 30rpx;
    font-weight: 800;
    line-height: 100rpx;
    margin-left: 25rpx;
    position: absolute;
}
.team_new_companyNewDate {
    float: right;
    font-size: 26rpx;   
    line-height: 100rpx;
}
.team_new_Pictures {
    text-align: center;
}
.team_new_Pictures image {
    width: 670rpx;
    height: 360rpx;
    border-radius: 1%;
}
.team_new_note {
    width: 100%;
    height: 70rpx;
}
.team_new_title {
    font-size: 30rpx;
    line-height: 70rpx;
}
.team_new_univalent {
    float: right;
    font-size: 30rpx;
    font-weight: 800;
    color: #fed9e1;
    line-height: 70rpx;   
}
.team_cheap_content {
    width: 90%;
    height: 530rpx;
    margin: auto;    
}
.team_near_content {
    width: 90%;
    height: 530rpx;
    margin: auto;    
}
