/* pages/getMoney/getMoney.wxss */
.getMoney_container {
    width: 100%;
    height: 100%;
}
.getMoney_header {
    width: 100%;
    height: 100rpx;
    border-top:  1px solid #e6e6e6;
    border-bottom: 1px solid #e6e6e6;  
}
.getMoney_data {
    font-size: 32rpx;
    font-weight: 800;
    margin-top: 35rpx;
    margin-left: 40rpx;

}
.getMoney_sum {
    font-size: 32rpx;
    font-weight: 800;
    text-align: center;
    margin-top: -35rpx;
}
.getMoney_sum image {
    width: 24rpx;
    height: 30rpx;
    border-radius: 50%;
}
.getMoney_income {
    font-size: 32rpx;
    font-weight: 800;
    float: right;
    margin-right: 40rpx;
    margin-top: -35rpx;
}
.getMoney_income image {
    width: 24rpx;
    height: 30rpx;  
    border: 1px; 
}
.getMoney_content {
    width: 100%;
    height: 80rpx;
}
.getMoney_content_list {
    float: right;
    width: 95%;
    height: 80rpx;
    border-bottom: 1px solid #e6e6e6;
 
}
.getMoney_content_date {
    font-size: 22rpx;
    font-weight: 800;
    color: #cdcdcd;
    margin-top: 29rpx;
}
.getMoney_content_sum {
    text-align: center;
    font-size: 28rpx;
    font-weight: 800;
    color: #3d7dcb;  
    margin-top: -30rpx; 
}
.getMoney_content_income {
    float: right;
    font-size: 28rpx;
    font-weight: 800;
    color: #3d7dcb;
    margin-right: 40rpx;
    margin-top: -30rpx;
}