}
.paySuccess_money {
    margin-top: 30rpx;
    font-size: 25rpx;
}
.paySuccess_if {
    margin-top: 5rpx;
}
.paySuccess_if image{
    width: 16rpx;
    height: 16rpx;
}
.paySuccess_back {
    font-size: 24rpx;
    margin-left: 12rpx;
}
.paySuccess_number {
    margin-top: 20rpx;
}
.paySuccess_your {
    font-size: 30rpx;
}
.paySuccess_num {
    font-size: 30rpx;
    color: #5793dd;
}
.paySuccess_service {
    margin-top: 15rpx;
}
.paySuccess_canGo {
    font-size: 25rpx;
}
.paySuccess_myOrder {
    font-size: 25rpx;    
    color: #feb3c5;    
}
.paySuccess_make {
    font-size: 25rpx;
}
.paySuccess_jump {
    margin-top: 40rpx;
    display: flex;
    justify-content: space-around;
    color: #feb3c5;    
    font-size: 30rpx;  
}
.paySuccess_backUp {
    border: 1px solid #feb3c5;
    padding: 10rpx;
}
.paySuccess_my {
    border: 1px solid #feb3c5;
    padding: 10rpx;
}