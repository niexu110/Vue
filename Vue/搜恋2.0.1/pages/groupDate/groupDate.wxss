/* pages/groupDate/groupDate.wxss */
.container{
    width:100%;
    height:auto;
}
.banner{
    width:100%;
    height:260rpx;
    margin-bottom:25rpx;
}
.banner image{
    display: block;
    width:100%;
    height:100%;
}
.group_flex{
    width:90%;
    height:auto;
    margin:10rpx auto;
}
.group_flex1{
    width:90%;
    height:auto;
    margin:0 auto;
    display: flex;
    flex-flow:row nowrap;
    justify-content:center;
}

.group_box{
    width:25%;
    margin-top:20rpx;
    display: inline-block;
    text-align: center;
}
.group_box>image{
   width:46rpx;
   height:46rpx;
}
.group_box>text{
    display: block;
    line-height: 50rpx;
    font-size: 30rpx;
    color:#111111;
}
.group_box1{
    display: flex;
    flex-flow:row nowrap;
    justify-content:center;
    flex: 1;
    height:140rpx;
    background:#F6F6F6;
}
.group_box1>image{
    flex:1;
    width:140rpx;
    height:140rpx;
    float:left;
    margin-right:20rpx;
}
.group_text{
    flex:1;
    width:177rpx;
    height:140rpx;
    display:inline-block;
}
.group_title{
    padding-top:20rpx;
    font-size:28rpx;
    display:block;
}
.group_text :last-child{
    display: block;
    width:177rpx;
    height:40rpx;
    line-height:40rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;  
    font-size:24rpx;
    color:#404040;
}
.line{
    width:100%;
    height:2rpx;
    background:#E6E6E6;
}
.line2{
    margin-top: 25rpx;
    width:100%;
    height:2rpx;
    background:#E6E6E6;
}
.group_banner{
    width:90%;
    height:auto;
    margin:30rpx auto;
}
.img{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    float:left;
    margin-top:5rpx;
    margin-right:10rpx;
}
.group_banner_box{
    width:85%;
    display: inline-block;
    height:80rpx;
}
.group_banner_title{
    font-size:32rpx;
    margin-bottom:5rpx;
}
.group_banner_text{
    font-size:24rpx;
     color:#666666;
}
.group_banner_banner{
    margin:20rpx auto;
}
.group_banner_banner>image{
    width:100%;
    height:300rpx;
    border-radius:5rpx; 
}

.group_banner_city{
    font-size:30rpx;
    color:#666;  
}
.group_boy,.group_girl{
     text-align: center;
     font-size: 30rpx;
     width:20%;
     display: inline-block;
}
.group_boy>image,.group_girl>image{
    width:24rpx;
    height:25rpx;
}
.group_price{
    padding-top:10rpx;
    float:right;
    font-size:30rpx;
    color:#FEB3C5;
}
.group_pre{
    margin-left:10rpx;
}