/* pages/missionDetail/missionDetail.wxss */
.container{
    width:100%;
    height:auto;
}
.nav{
    width:100%;
    height:430rpx;
}
.nav>image{
    width:100%;
    height:430rpx;
}
.banner{
    height:auto;
    margin:0 auto;
}
.banner_title{
    margin:30rpx auto;
    text-align: center; 
    color:#666;
    font-size:36rpx;
}
.banner_img{
    width:80%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.love{
    width:60rpx;
    height:60rpx;
}
.banner_img_middle{
    height:100%;
    width: 100%;
    text-align: center;
    margin-top: 10rpx;
}
.img{
    width:60rpx;
    height:60rpx;
    border-radius:50%;
    margin-left:20rpx; 
    border:solid 1px #999;
}
.right{
    margin-top: 20rpx;
    width:30rpx;
    height:50rpx;
}
.group_boy,.group_girl{
     text-align: center;
     font-size: 30rpx;
     display: inline-block;
     margin-left:20rpx;
}
.group_boy>image,.group_girl>image{
  width:24rpx;
  height:25rpx;
}
.group_pre{
    margin-left:10rpx;
    color:#79A9E4;
}
.group_pre1{
    margin-left:10rpx;
    color:#FEC2D1;
}
.banner_man{
    width:100%;
    height:65rpx;
    text-align:center; 
}
.group_text{
    color:#999;
    font-size:24rpx;
    margin-left:20rpx;
}
.kong{
    height:20rpx;
    background: #f9f9f9;
}
.banner_box{
    margin:0 40rpx;
    height:120rpx;
    border-bottom: solid 1px #e6e6e6;
}
.image{
    display:inline-block; 
    margin-top:45rpx;
    width:29rpx;
    height:30rpx;
}
.banner_box1 text,.banner_box text{
   width:auto;
   height:15rpx;
   margin-left:40rpx;
   color:#666;
   font-size:28rpx;
}
.banner_box .blue{
    color:#629ADF;
}
.banner_box .blues{
    margin:0;
    height:15rpx;
    color:#629ADF;
}
.banner_box1{
    width:90%;
    margin:0 auto;
    margin-bottom: 120rpx;
}
.btn{
    width: 100%;
    height: 90rpx;
    background:#5793DD;
    color:#ffffff;
    font-weight:bold;
    font-size:34rpx;
    border-radius:0; 
    position:fixed;
    bottom:0%;
}