/* pages/personalAppointment/personalAppointment.wxss */
.container{
    width:100%;
}
.fixed{
    width:140rpx;
    height:140rpx;
    position:fixed;
    bottom:30rpx; right:30rpx;
    border-radius:50%;
    background:rgba(87,147,221,.9);
    text-align:center; 
    z-index:1000;
}
.fixed image{
    position:relative;
    top:20rpx;
    left:-5rpx;
    width:60rpx;
    height:50rpx;
}
.fixed text{
    display:block; 
    margin-top:20rpx;
    font-size:26rpx;
    color:#ffffff;
}
.header_box{
    width:100%;
    height:auto;
    border-top:1px solid #E6E6E6;
}
.header_container{
    width:90%;
    height:auto;
    margin:0 auto;
}
.header_img{
    font-size:30rpx;
    margin-top:20rpx;
    margin-bottom:40rpx;
    color:#666;
    text-align:center;
    width:25%;
    display:inline-block;
}
.header_img image{
    width:60rpx;
    height:60rpx;
}
.header_text{
    margin-top:10rpx;
}
.title{
    width:100%;
    height:30rpx;
    background:#F1F1F1;
}
.left{
    display:inline-block; 
    margin-right:20rpx;
}
.range,.time{
    color:#4D85CC;
}
.banner{
    width:100%;
    height:430rpx;
    background:#F1F1F1;
    
}
.banner_box{
    background:#fff;
    width:720rpx;
    padding-left:20rpx;
    height:400rpx;
    position: relative;
    overflow:hidden;
    margin:0 auto;
}
.Aname{
    position:absolute;
    top:20rpx;
    font-size:30rpx;
    transform:rotate(45deg); 
    right:-40rpx;
    width:150rpx;
    height:40rpx;
    background:#FEB3C5;
    text-align:center;
    color:#fff; 
}
.Bname{
    position:absolute;
    top:20rpx;
    font-size:30rpx;
    transform:rotate(45deg); 
    right:-40rpx;
    width:150rpx;
    height:40rpx;
    background:#4b85cc;
    text-align:center;
    color:#fff; 
}

.banner_top{
    width:100%;
    height:140rpx;
}
.banner_img{
    margin-top:20rpx;
    width:25%;
    height:140rpx;
}
.banner_img>image{
   width:120rpx;
   height:120rpx;
   border-radius:10rpx;
}
.banner_title{
    margin-top:20rpx;
    width:75%;
    height:140rpx;
}
.banner_nick{
    font-size:30rpx;
    font-weight:bold;
}
.banner_age{
    display:inline-block;
    margin-left:20rpx; 
}
.banner_age>image{
    width:25rpx;
    height:25rpx;
}
.banner_age>text{
    display:inline-block;
    margin-left:5rpx; 
    font-size:22rpx;
    color:#666; 
}
.banner_charm{
    margin-top:10rpx;
    font-size:24rpx;
    color:#666; 
}
.banner_constellatory{
    margin-top:10rpx;
    width:90%;
}
.banner_constellatory_left{
    font-size:22rpx;
    color:#666;
}
.banner_constellatory_right{
    font-size:22rpx;
    color:#999;
}
.banner_constellatory_text{
    display:inline-block;
    margin-left:40rpx; 
}
.banner_content{
  margin-top:20rpx;
  float:left;
  width:100%;
  height:180rpx;
}
.content_left{
    width:58%;
    height:180rpx;
}
.content_right{
    width:42%;
    height:180rpx;
}
.content_right>image{
    width:250rpx;
    height:180rpx;
    border-radius:4rpx; 
}
.content_left view{
    margin-top:18rpx;
}
.content_left .content_title{
    margin-top:0;
    font-size:30rpx;
    font-weight:bold;
}
.content_text{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.content_text,.content_time{
    font-size:24rpx;
    color:#666;
}
.content_left .content_num{
    margin-top:20rpx;
    color:#4D85CC;
    font-size:26rpx;
}
.content_num text{
    padding-right: 35rpx;
}
.scene{
    width:100%;
    min-height:400rpx;
    background:#fff;
}
.scene_box{
    margin:0 40rpx;
    height:440rpx;
}
.scene_container{
   width:310rpx;
   height:420rpx;
   margin:10rpx 10rpx;
   background:#fff;
   display:inline-block; 
}
.scene_img,.scene_img>image{
    width:100%;
    height:240rpx;
    border-radius:6rpx;
}
.scene_title{
    margin-top:20rpx;
    font-size:26rpx;
    color:#111111;
    font-weight:bold;
}
.scene_price{
    margin-top:20rpx;
    font-size:26rpx;
    color:#6DA0E1; 
}
.scene_num{
    color:#666;
    font-size:24rpx;
    margin-top:20rpx;
}
.titles{
    clear:both; 
    width:100%;
    height:70rpx;
    background:#F9F9F9;
}
.title-box{
    width:90%;
    height:70rpx;
    font-size:24rpx;  
}
.title_left{
    width:45%;
    text-align:center;
    height:70rpx;
    color:#666;
    font-weight:bold;
    line-height:70rpx;  
}