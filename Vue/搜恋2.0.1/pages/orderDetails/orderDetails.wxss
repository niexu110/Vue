/* pages/orderDetails/orderDetails.wxss */
.container{
    width:100%;
    height:auto;
    border-top:1rpx solid #E6E6E6;
}
.box{
    width:90%;
    margin:0 auto;
    height:auto;
}
.box_title{
    margin-top:20rpx;
    font-size:32rpx;
    font-weight:bold;
}
.text{
    display:inline-block; 
    color:#FEB3C5;
    font-weight:400;
}
.text>image{
    width:24rpx;
    height:25rpx;
}
.box_banner{
    width:100%;
    margin-top:20rpx;
    padding-top:10rpx;
    height:160rpx; 
    border-top:1rpx solid #e6e6e6; 
}
.banner_img{
    width:29%;
    height:140rpx;
}
.banner_img>image{
    width:175rpx;
    height:140rpx;
    border-radius:10rpx; 
}
.banner_right{
    width:70%;
    height:140rpx;
}
.banner_right view{
    margin-top:10rpx;
}
.banner_title{
    font-size:28rpx;
    font-weight:bold;
    color:#333;
}
.banner_time{
    color:#666;
    font-size:24rpx;
}
.box_code{
    width:100%;
    height:315rpx;
}
.code_title{
      width:100%;
      margin-top:30rpx;
      font-size:30rpx;
      color:#666;
      font-weight:bold; 
}
.code{
    border-top:2rpx solid #5793DD;
    width:100%;
    height:110rpx;
    line-height:110rpx;
    text-align:center;
    font-size:40rpx;
    color:#5793DD;  
}
.code_text{
    width:100%;
    height:80rpx;
    font-weight:bold; 
    line-height:80rpx;
    font-size:24rpx;
    color:#666; 
}