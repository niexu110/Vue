/* pages/historicalActivities/historicalActivities.wxss */
.container{
    width:100%;
    height:auto;
}
.banner{
    width:90%;
    height:auto;
    margin:0 auto;
}
.box{
    width:100%;
    height:185rpx;
    margin-top:40rpx;
    border-bottom:solid 1px #e6e6e6;
}
.box_left{
    width:210rpx;
    height:165rpx;
}
.img{
    width:209rpx;
    height:165rpx;
    border-radius:5rpx; 
}
.box_totle{
    width:65%;
}
.box_totle view{
    float:left;
    width:100%;
    margin-top:20rpx;
}
.box_title{
    font-size:30rpx;
    font-weight:500; 
}
.text1,.line{
    font-weight:bold;
}
.text{
    font-size:24rpx;
    color:#999; 
}
.text2{
    color:#FEB3C5;
}
.image{
    width:25rpx;
    height:25rpx;
    margin-right:20rpx;
}