/* pages/showMyDate/showMyDate.wxss */
.showMyDat_container {
    width: 100%;
    height: 100%;
    border-top: 1px solid #e6e6e6;
}
.showMyDat_head {
    width: 94%;
    float: right;
}
.showMyDat_placeInfo {
    height: 200rpx;
    display: flex;
    border-bottom: 1px solid #e6e6e6;
}
.showMyDat_placeImg image{
    padding-top: 28rpx;
    width: 210rpx;
    height: 150rpx;
    border-radius: 5%;
}
.showMyDat_information {
    margin-left: 30rpx;
    padding-top: 50rpx;
}
.showMyDat_placeName {
    font-size: 30rpx;
}
.showMyDat_gps image {
    width: 16rpx;
    height: 24rpx;
}
.showMyDat_gps text {
    font-size: 24rpx;
    line-height: 50rpx;
}
.showMyDat_money {
    color: #5793dd;
    font-size: 24rpx;   
}
.showMyDat_appraise {
    height: 100rpx;
    display: flex;
}
.showMyDat_first{
    font-size: 24rpx;
    line-height: 100rpx;
}
.showMyDat_second {
    margin-left: 40rpx;
}
.star-image {
    width: 35rpx;
    height: 35rpx;
    padding-top: 30rpx;
    padding-right: 20rpx;
}
.item {
    position: absolute;
    top: 233rpx;
    width: 35rpx;
    height: 35rpx;
}
.myText {
    border: 1px solid #e6e6e6;
    width: 94%;
    height: 150rpx;
    float: right;
    margin-right: 40rpx;
    border-radius: 5%;
}
.myText textarea{
    font-size:28rpx;
    color:#5793dd;
    width:100%;
    height:150rpx;
}
.showMyDat_upload {
    width:94%;
    height: 350rpx;
    margin-right: 40rpx;
    margin-top: 180rpx;
}
.img-add{
    width:25%;
    float:left;
    height:170rpx;
}
.img-max {
    width:25%;
    float:left;
    height:100rpx;
    text-align: center;  
    padding-top: 50rpx;
    margin-top: 20rpx;
}
.img-max text{
    font-size: 24rpx;
    color: #5793dd;
}
.img-add image{
    padding-top:20rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 5%;   
    padding-right: 20rpx;
}
.img-css {
    width: 150rpx;
    height: 150rpx;
    border-radius: 5%;   
    padding-right: 20rpx;
}
.icon {
    position: absolute;
    margin-left: 130rpx;
}
.button {
    background-color: #5793dd;
    width: 95%;
    color: #ffffff;
    margin-left: 20rpx;
    position:fixed;
    bottom:2%;
}